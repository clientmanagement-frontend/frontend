const mongoose = require("mongoose");
const uniqueValidator = require('mongoose-unique-validator');

const clientSchema = new mongoose.Schema({
    _id: { type: mongoose.Schema.Types.ObjectId, default: () => new mongoose.Types.ObjectId() },
    name: { type: String, required: true },
    address: { type: String },
    phone: { type: String },
    email: { type: String },
    points: { type: Number, default: 0 },
  });

const taskSchema = new mongoose.Schema({
    name: { type: String, required: true },
    due: { type: Date},
    description: { type: String},
    client: {type: Object}
});

const templateSchema = new mongoose.Schema({
    name: { type: String, required: true },
    description: { type: String},
    fields: { type: Object},
});

const UserSchema = new mongoose.Schema({
templates: [templateSchema],
tasks: {
    type: Map,
    of: [taskSchema],
    default: {},
    },

company: {
    type: String,
    maxlength: [100, "Company name too long"]
},
    
email: {
    type: String,
    required: [true, "Please provide an email."],
    unique: [true, "Username taken!"],
    maxlength: [100, "Email too long"],
    uniqueCaseInsensitive: true
},

password: {
    type: String,
    required: [true, "Please provide a password!"],
    unique: false,
},

renewal_date: {
    type: Number,
    default: 0
},

pending_device: {
    type: String
},

code: {
    type: Number
},

code_attempts: {
    type: Number,
    default: 0
},

dormant: {
    // Number of days that account has not been accessed
    type: Number,
    default: 0,
},

// Can be used to prevent access to the app until we do setup for example
account_complete: {
    type: Boolean,
    default: false
},

marked_for_deletion: {
    type: Boolean,
    default: false
},

email_confirmed: {
    type: Boolean,
    default: false
},

receipt: {
    type: String,
    default: ''
},

tokens: {
    // Defaults to 0. Trial tokens granted once we confirm that registering device id is not in the device pool
    type: Number,
    default: 0
},
requests: {
    type: String,
    default: ''
},

devices: {
    type: Array
},

clients: [clientSchema],

}, {strict: false});

UserSchema.plugin(uniqueValidator, {
    message: 'Error, expected {PATH} to be unique.'
  });
  
module.exports = mongoose.model.Users || mongoose.model("User", UserSchema);